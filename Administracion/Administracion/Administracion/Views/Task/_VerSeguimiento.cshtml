@model Administracion.DomainModel.Task

@if (Model != null && Model.TaskHistory != null)
{
    <div id="modal-follow-list-task-@Model.Id" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h2 class="modal-title"><i class="fa fa-list"></i> Seguimiento</h2>
                </div>
                <!-- END Modal Header -->
                <!-- Modal Body -->
                <div class="modal-body">
                    <div class="block-title">
                        <h2><strong>Lista</strong> </h2>
                    </div>
                    <div class="block">
                        <ul>
                            @foreach (var follow in Model.TaskHistory)
                            {
                                <li>
                                    <strong>Fecha: </strong> @follow.FollowDate.ToShortDateString()
                                    <p>@follow.Coment</p>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <!-- END Modal Body -->
            </div>
        </div>
    </div>
}

