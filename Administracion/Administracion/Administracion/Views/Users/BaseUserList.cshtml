@model List<Administracion.DomainModel.User>
@{
    ViewBag.Title = "Usuarios";
}

<div id="page-content" class="sidebar-partial sidebar-visible-lg sidebar-no-animations">
    <div id="main-container">
        <div class="content-header">
            <ul class="nav-horizontal text-center">
                <li>
                    <a href="/DataBase/Index"><i class="fa fa-home"></i> Home</a>
                </li>
                <li>
                    <a href="javascript:void(0)"><i class="gi gi-group"></i> Usuarios</a>
                </li>
            </ul>
        </div>
        <ul class="breadcrumb breadcrumb-top">
            <li><a href="/home">Home</a></li>
            <li><a href="">Users</a></li>
        </ul>
        <div class="block full">
            <div class="block-title">
                <h2><strong>Listado de</strong> Usuarios</h2>
            </div>
            <p>Aquí podrás encontrar toda la información de los usuarios</p>


            <div class="panel-heading">
                <div class="row">

                    <div class="col-md-2">
                        <a href="@Url.Action("BaseUserEdit", "Users")" class="btn btn-info "><i class="fa fa-plus" pull-right></i> AGREGAR NUEVO</a>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                @if (Model.Count() > 0)
                {

                    <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">

                        <thead>
                            <tr>
                                <th class="text-center">Id</th>
                                <th class="text-center">DNI</th>
                                <th class="text-center">Apellido</th>
                                <th class="text-center">Nombre</th>
                                <th class="text-center">Telefono</th>
                                <th class="text-center">Email</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var user in Model)
                            {
                                @Html.Partial("_BaseUserTableRow", user)
                            }
                        </tbody>
                    </table>

                }

            </div>
        </div>
    </div>
</div>

