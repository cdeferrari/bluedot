                                                    <div class="modal-content">
                                                        <!-- Modal Header -->
                                                        <div class="modal-header text-center">
                                                            <h2 class="modal-title"><i class="fa fa-pencil"></i> ELIMINAR TAREA</h2>
                                                        </div>
                                                        <!-- END Modal Header -->
                                                        <!-- Modal Body -->
