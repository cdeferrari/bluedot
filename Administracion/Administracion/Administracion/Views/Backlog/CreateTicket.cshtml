@model Administracion.Models.TicketViewModel
@using Administracion.Models;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="page-content" class="sidebar-partial sidebar-visible-lg sidebar-no-animations">

    <div id="main-container">

        <div class="block full">
             @if (Model.Id > 0)
             {
                <h2>@Model.Title</h2>
             }
             else
             {
                <h2>Pedido</h2>
             }

            @using (Html.BeginForm("CreateUpdateTicket", "Backlog", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                if (Model.Id > 0)
                {
                    @Html.HiddenFor(x => x.Title)
                }

                <div class="form-horizontal">
                    <hr />

                    @if (Model.Id > 0)
                    {
                        <div class="alert alert-success animation-fadeInQuick">Estado Actual <strong>@(Model.Status.Description.ToLower() == "open" ? "abierto" : "cerrado")</strong></div>
                        <p> Creado por : @Model.Creator.Name @Model.Creator.Surname el @Model.OpenDate.ToShortDateString()</p>                        
                        if (Model.Status.Description != "closed")
                        {
                            <a href="/Backlog/CloseTicket/@Model.Id" class="btn btn-xs btn-default pull-right"><i class="fa fa-check"></i> Cerrar Ticket</a>
                        }


                        if (Model.Resolved.HasValue && Model.Resolved.Value)
                        {
                                                <a style="background-color:green; color:white" href="javascript:void(0)" class="btn btn-xs btn-default pull-right">
                                                     RESUELTO</a>
                                                    }
                                                    else
                                                    {
                                                    <a href="/Backlog/ResolveTicket?Id=@Model.Id" class="btn btn-xs btn-default pull-right">
                                                        <i class="fa fa-check"></i> Resolver Ticket
                                                    </a>
                                                    }

                                                    <a href="/Backlog/SetTicketBlocker/@Model.Id" class="btn btn-xs btn-danger"><i class="fa fa-flag"></i> Dar Prioridad Alta</a>

                                                    <hr>
                                                    }




                                                    @Html.HiddenFor(model => model.Id)
