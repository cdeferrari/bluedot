@model Administracion.Models.SystemModel
@{
    ViewBag.Title = "Home Page";
}

<div id="page-content" class="sidebar-partial sidebar-visible-lg sidebar-no-animations">

    <div id="main-container">

        <div id="page-content">

            <div class="content-header">
                <ul class="nav-horizontal text-center">
                    <li>
                        <a href="/DataBase/Index"><i class="fa fa-home"></i> Dashboard</a>
                    </li>

                    <li class="active">
                        <a href="/System/Index"><i class="gi gi-building"></i> Sistema</a>
                    </li>
                </ul>
            </div>
            


            <div class="row">
                <div class="col-lg-6">
                    <!-- Latest Orders Block -->
                    <div class="block">
                        <!-- Latest Orders Title -->
                        <div class="block-title">
                            <div class="block-options pull-right">
                                <a href="/System/CreateLaboralUnion" class="btn btn-alt btn-sm btn-default" data-toggle="tooltip" title="Agregar Sindicato"><i class="fa fa-plus"></i></a>
                            </div>
                            <h2><strong>Sindicatos</strong></h2>
                        </div>
                        <!-- END Latest Orders Title -->
                        <!-- Latest Orders Content -->
                        <table class="table table-borderless table-striped table-vcenter table-bordered">
                            <tbody>
                                <tr>
                                    <td class="text-center"><strong>Id</strong></td>
                                    <td class="text-center"><strong>Descripción</strong></td>     
                                    <td></td>
                                </tr>

                                @foreach (var union in Model.LaboralUnions.OrderBy(x => x.Id))
                                {
                                    <tr>
                                        <td class="text-center"><a href="javascript:void(0)">@union.Id</a></td>                                        
                                        <td class="text-center"><a href="javascript:void(0)">@union.Description</a></td>
                                        
                                        <td class="text-center">
                                            <div class="btn-group">                                                
                                                <a href="#modal-delete-lu-@union.Id" data-toggle="modal" title="Borrar sindicato" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                                            </div>
                                        </td>
                                    </tr>

                                    <div id="modal-delete-lu-@union.Id" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <!-- Modal Header -->
                                                <div class="modal-header text-center">
                                                    <h2 class="modal-title"><i class="fa fa-pencil"></i> ELIMINAR SINDICATO</h2>
                                                </div>
                                                <!-- END Modal Header -->
                                                <!-- Modal Body -->
                                                <div class="modal-body">
                                                    <form action="index.html" method="post" enctype="multipart/form-data" class="form-horizontal form-bordered" onsubmit="return false;">
                                                        <fieldset>
                                                            <legend>Estas seguro que queres Eliminar sindicato @union.Description </legend>

                                                        </fieldset>

                                                        <div class="form-group form-actions">
                                                            <div class="col-xs-12 text-right">
                                                                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancelar</button>
                                                                <button onclick="location.href='/System/DeleteLaboralUnion?id=@union.Id'" type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <!-- END Modal Body -->
                                            </div>
                                        </div>
                                    </div>

                                            }                               

                            </tbody>
                        </table>
                        <!-- END Latest Orders Content -->
                    </div>
                    <!-- END Latest Orders Block -->
                </div>
                <div class="col-lg-6">
                    <!-- Top Products Block -->
                    <div class="block">
                        <!-- Top Products Title -->
                        <div class="block-title">
                            <div class="block-options pull-right">
                                @*<a href="page_ecom_products.html" class="btn btn-alt btn-sm btn-default" data-toggle="tooltip" title="Show All"><i class="fa fa-eye"></i></a>*@
                                <a href="/System/CreatePaymentType" class="btn btn-alt btn-sm btn-default" data-toggle="tooltip" title="Agregar Tipo De Pago"><i class="fa fa-plus"></i></a>
                            </div>
                            <h2><strong>Tipo</strong> Pago</h2>
                        </div>
                        <!-- END Top Products Title -->
                        <!-- Top Products Content -->
                        <table class="table table-borderless table-striped table-vcenter table-bordered">
                            @if (Model.PaymentTypes != null)
                            {
                                <tbody>
                                    <tr>
                                        <td class="text-center" style="width: 100px;"><strong>Id</strong></td>
                                        <td>Descripción</td>    
                                        <td></td>
                                    </tr>
                                    @foreach (var ptype in Model.PaymentTypes)
                                    {
                                        <tr>
                                            <td class="text-center" style="width: 100px;"><a href="#"><strong>@ptype.Id</strong></a></td>                                            
                                            <td class="text-center">@ptype.Description</td>                                                                                    

                                            <td class="text-center">
                                                <div class="btn-group">
                                                    <a href="#modal-delete-ptype-@ptype.Id" data-toggle="modal" title="Borrar tipo pago" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                        <div id="modal-delete-ptype-@ptype.Id" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <!-- Modal Header -->
                                                    <div class="modal-header text-center">
                                                        <h2 class="modal-title"><i class="fa fa-pencil"></i> ELIMINAR TIPO DE PAGO</h2>
                                                    </div>
                                                    <!-- END Modal Header -->
                                                    <!-- Modal Body -->
                                                    <div class="modal-body">
                                                        <form action="index.html" method="post" enctype="multipart/form-data" class="form-horizontal form-bordered" onsubmit="return false;">
                                                            <fieldset>
                                                                <legend>Estas seguro que queres Eliminar tipo de pago @ptype.Description </legend>

                                                            </fieldset>

                                                            <div class="form-group form-actions">
                                                                <div class="col-xs-12 text-right">
                                                                    <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancelar</button>
                                                                    <button onclick="location.href='/System/DeletePaymentType?id=@ptype.Id'" type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <!-- END Modal Body -->
                                                </div>
                                            </div>
                                        </div>
                                    }                               
                            </tbody>
                            }
                            
                        </table>
                        <!-- END Top Products Content -->
                    </div>
                    <!-- END Top Products Block -->
                </div>    <!-- END Quick Stats -->


            </div>



            <div class="row">
                <div class="col-lg-6">
                    <!-- Latest Orders Block -->
                    <div class="block">
                        <!-- Latest Orders Title -->
                        <div class="block-title">
                            <div class="block-options pull-right">
                                <a href="/System/CreateCity" class="btn btn-alt btn-sm btn-default" data-toggle="tooltip" title="Agregar Ciudad"><i class="fa fa-plus"></i></a>
                            </div>
                            <h2><strong>Ciudades</strong></h2>
                        </div>
                        <!-- END Latest Orders Title -->
                        <!-- Latest Orders Content -->
                        <table class="table table-borderless table-striped table-vcenter table-bordered">
                            <tbody>
                                <tr>
                                    <td class="text-center"><strong>Id</strong></td>
                                    <td class="text-center"><strong>Descripción</strong></td>
                                    <td></td>
                                </tr>

                                @foreach (var city in Model.Cities.OrderBy(x => x.Id))
                                {
                                    <tr>
                                        <td class="text-center"><a href="javascript:void(0)">@city.Id</a></td>
                                        <td class="text-center"><a href="javascript:void(0)">@city.Description</a></td>

                                        <td class="text-center">
                                            <div class="btn-group">
                                                <a href="#modal-delete-city-@city.Id" data-toggle="modal" title="Borrar ciudad" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                                            </div>
                                        </td>
                                    </tr>

                                    <div id="modal-delete-city-@city.Id" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <!-- Modal Header -->
                                                <div class="modal-header text-center">
                                                    <h2 class="modal-title"><i class="fa fa-pencil"></i> ELIMINAR CIUDAD</h2>
                                                </div>
                                                <!-- END Modal Header -->
                                                <!-- Modal Body -->
                                                <div class="modal-body">
                                                    <form action="index.html" method="post" enctype="multipart/form-data" class="form-horizontal form-bordered" onsubmit="return false;">
                                                        <fieldset>
                                                            <legend>Estas seguro que queres Eliminar ciudad @city.Description </legend>

                                                        </fieldset>

                                                        <div class="form-group form-actions">
                                                            <div class="col-xs-12 text-right">
                                                                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancelar</button>
                                                                <button onclick="location.href='/System/DeleteCity?id=@city.Id'" type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <!-- END Modal Body -->
                                            </div>
                                        </div>
                                    </div>

                                }

                            </tbody>
                        </table>
                        <!-- END Latest Orders Content -->
                    </div>
                    <!-- END Latest Orders Block -->
                </div>
                <div class="col-lg-6">
                    <!-- Top Products Block -->
                    <div class="block">
                        <!-- Top Products Title -->
                        <div class="block-title">
                            <div class="block-options pull-right">
                                @*<a href="page_ecom_products.html" class="btn btn-alt btn-sm btn-default" data-toggle="tooltip" title="Show All"><i class="fa fa-eye"></i></a>*@
                                <a href="/System/CreateProvince" class="btn btn-alt btn-sm btn-default" data-toggle="tooltip" title="Agregar Provincia"><i class="fa fa-plus"></i></a>
                            </div>
                            <h2><strong>Provincia</strong></h2>
                        </div>
                        <!-- END Top Products Title -->
                        <!-- Top Products Content -->
                        <table class="table table-borderless table-striped table-vcenter table-bordered">
                            @if (Model.Provinces != null)
                            {
                                <tbody>
                                    <tr>
                                        <td class="text-center" style="width: 100px;"><strong>Id</strong></td>
                                        <td>Descripción</td>
                                        <td></td>
                                    </tr>
                                    @foreach (var province in Model.Provinces)
                                    {
                                        <tr>
                                            <td class="text-center" style="width: 100px;"><a href="#"><strong>@province.Id</strong></a></td>
                                            <td class="text-center">@province.Description</td>

                                            <td class="text-center">
                                                <div class="btn-group">
                                                    <a href="#modal-delete-prov-@province.Id" data-toggle="modal" title="Borrar tipo pago" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                        <div id="modal-delete-prov-@province.Id" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <!-- Modal Header -->
                                                    <div class="modal-header text-center">
                                                        <h2 class="modal-title"><i class="fa fa-pencil"></i> ELIMINAR PROVINCIA</h2>
                                                    </div>
                                                    <!-- END Modal Header -->
                                                    <!-- Modal Body -->
                                                    <div class="modal-body">
                                                        <form action="index.html" method="post" enctype="multipart/form-data" class="form-horizontal form-bordered" onsubmit="return false;">
                                                            <fieldset>
                                                                <legend>Estas seguro que queres Eliminar provincia @province.Description </legend>

                                                            </fieldset>

                                                            <div class="form-group form-actions">
                                                                <div class="col-xs-12 text-right">
                                                                    <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancelar</button>
                                                                    <button onclick="location.href='/System/DeleteProvince?id=@province.Id'" type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <!-- END Modal Body -->
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </tbody>
                            }

                        </table>
                        <!-- END Top Products Content -->
                    </div>
                    <!-- END Top Products Block -->
                </div>    <!-- END Quick Stats -->


            </div>

        </div>
    </div>
    
</div>